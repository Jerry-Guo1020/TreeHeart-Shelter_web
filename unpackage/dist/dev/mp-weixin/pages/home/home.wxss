.card {
		background-color: white;
		margin: 10px;
		padding: 20px;
		border-radius: 20px;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
}
.user_logo {
		border-radius: 50px;
		width: 50px;
		height: 50px;
		border: 3px solid #4a9364;
		object-fit: cover;
		/* 确保照片不变形 */
}
.user {
		display: flex;
		align-items: center;
}
.user_info {
		display: flex;
		flex-direction: column;
		justify-content: center;
		margin-left: 12px;
}
.userName {
		font-weight: bold;
		font-size: 14px;
		font-family: "AlimamaFangYuanTiVF Medium", sans-serif;
		color: #333;
		margin-bottom: 4px;
}
.dateTime {
		font-size: 9px;
		color: #888;
}
.info {
		margin-top: 6px;
		display: flex;
		align-items: center;
		/* 让两个元素在同一行垂直居中 */
		gap: 10px;
		/* 控制间距 */
		margin-bottom: 10px;
}
.choiceTag {
		display: inline-block;
		background-color: #f57fa0;
		color: white;
		padding: 4px 10px;
		border-radius: 20px;
		font-size: 8px;
}
.title {
		font-weight: bold;
		font-size: 8px;
		color: #333;
}
.content {
		font-size: 10px;
}
.contentPhoto {
		margin-top: 5px;
		width: 100%;
		display: block;
		height: auto;
}
.emogi {
		display: flex;
		justify-content: flex-end;
		margin: 10px;
}
.talking {
		background-color: #f2f2f2;
		border-radius: 8px;
}
.userTalkingInfo {
		display: flex;
		padding: 10px;
}
.userTalkLogo {
		border-radius: 50px;
		width: 20px;
		height: 20px;
		border: 2px solid #4a9364;
		object-fit: cover;
		/* 确保照片不变形 */
}
.talkingUserName {
		font-weight: bold;
		font-size: 14px;
		font-family: "AlimamaFangYuanTiVF Medium", sans-serif;
		color: #333;
		margin-bottom: 4px;
}
.talkAbout {
		margin-left: 10px;
}
.dateTime {
		margin-left: 10px;
}
