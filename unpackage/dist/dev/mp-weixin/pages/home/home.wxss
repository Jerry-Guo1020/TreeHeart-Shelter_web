
.all {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		padding-bottom: calc(72px + env(safe-area-inset-bottom, 24px));
}
.container {
}
.page {
		width: auto;
		margin: 0 auto;
		padding-bottom: 10px;
}
.top-image {
		width: 100%;
		display: block;
		height: auto;
}
.tags {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		padding: 7px;
		gap: 25px;
		border-bottom: 1px solid #f6f6f6;
}
.tag_orange {
		border: none;
		border-radius: 20px;
		background-color: #ffdfbc;
		padding: 6px 12px;
		font-size: 14px;
		width: 20%;
		text-align: center;
		color: #ff7700;
		font-weight: bolder;
}
