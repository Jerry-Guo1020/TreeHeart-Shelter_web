
.container.data-v-727d09f0 {
		min-height: 100vh;
		background: linear-gradient(180deg, #FFD9A0 0%, #FFF6ED 100%);
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-bottom: calc(72px + env(safe-area-inset-bottom, 24px));
}
.card.data-v-727d09f0 {
		background-color: whitesmoke;
		margin: 32rpx 0 28rpx 0;
		padding: 36rpx 26rpx 28rpx 26rpx;
		border-radius: 20px;
		box-shadow: 0 4px 20px rgba(255, 146, 0, 0.07);
		text-align: center;
		width: 85%;
}
.title.data-v-727d09f0 {
		font-size: 38rpx;
		font-weight: 600;
		color: #FF9200;
		margin-bottom: 18rpx;
		letter-spacing: 2rpx;
}
.content.data-v-727d09f0 {
		font-size: 26rpx;
		color: #815C41;
}

	/* 快捷入口四色块 */
.quick-row.data-v-727d09f0 {
		width: 700rpx;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		margin: 20rpx 0 40rpx 0;
}
.quick-btn.data-v-727d09f0 {
		width: 150rpx;
		display: flex;
		flex-direction: column;
		align-items: center;
}
.quick-icon-box.data-v-727d09f0 {
		width: 80rpx;
		height: 80rpx;
		border-radius: 18px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 12rpx;
}
.quick-icon-emoji.data-v-727d09f0 {
		font-size: 40rpx;
		text-align: center;
}
.quick-text.data-v-727d09f0 {
		font-size: 25rpx;
		font-weight: 500;
		text-align: center;
		margin-top: 4rpx;
		letter-spacing: 2rpx;
		font-weight: bolder;
}

	/* 测评卡片：固定宽度&高度，加大更显内容感 */
.test-list.data-v-727d09f0 {
		width: 700rpx;
		display: flex;
		flex-direction: column;
		gap: 32rpx;
		align-items: center;
		margin-top: 18rpx;
		margin-bottom: 32rpx;
}
.test-card.data-v-727d09f0 {
		background: #fff;
		border-radius: 30rpx;
		box-shadow: 0 8rpx 36rpx rgba(0, 172, 255, 0.11);
		width: 700rpx;
		height: 550rpx;
		margin-bottom: 12rpx;
		display: flex;
		flex-direction: column;
		overflow: hidden;
}

	/* 大图区域 */
.img-section.data-v-727d09f0 {
		position: relative;
		width: 100%;
		height: 250rpx;
		/* 更高大 */
		overflow: hidden;
		border-radius: 30rpx 30rpx 0 0;
		background: #f6f6f6;
}
.test-img.data-v-727d09f0 {
		width: 100%;
		height: 250rpx;
		object-fit: cover;
		display: block;
		border-radius: 30rpx 30rpx 0 0;
}
.card-type-tag.data-v-727d09f0 {
		position: absolute;
		left: 20rpx;
		top: 20rpx;
		color: #fff;
		font-size: 24rpx;
		padding: 8rpx 26rpx;
		border-radius: 18rpx;
		font-weight: 500;
		opacity: 0.96;
		letter-spacing: 2rpx;
}
.img-title.data-v-727d09f0 {
		position: absolute;
		left: 20rpx;
		bottom: 20rpx;
		font-size: 34rpx;
		color: #fff;
		font-weight: bold;
		z-index: 2;
		text-shadow: 0 2rpx 12rpx rgba(80, 60, 30, 0.15);
		letter-spacing: 3rpx;
}

	/* 描述区 */
.card-desc.data-v-727d09f0 {
		padding: 28rpx 22rpx 12rpx 22rpx;
		color: #815C41;
		font-size: 25rpx;
		min-height: 60rpx;
		line-height: 1.55;
		background: #fff;
}

	/* 信息区 */
.card-info.data-v-727d09f0 {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 30rpx;
		padding: 0 22rpx 0 22rpx;
		margin-bottom: 14rpx;
}
.info-item.data-v-727d09f0 {
		display: flex;
		align-items: center;
		color: #FF9200;
		font-size: 23rpx;
		margin-right: 12rpx;
		font-weight: 500;
}

	/* 按钮区 */
.start-btn.data-v-727d09f0 {
		margin: 0 22rpx 22rpx 22rpx;
		border-radius: 32rpx;
		background: linear-gradient(90deg, #FF9200 0%, #FA9FB4 100%);
		color: #fff;
		font-size: 28rpx;
		height: 62rpx;
		line-height: 62rpx;
		text-align: center;
		font-weight: bold;
		border: none;
		box-shadow: 0 4rpx 18rpx rgba(252, 94, 101, 0.12);
		letter-spacing: 2rpx;
}
.start-btn.data-v-727d09f0:active {
		background: #FC5E65;
		color: #fff;
}
